{% extends 'home.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
	<div class="login-form-box">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<form method="POST" action="/login" id="login-form">
						<div class="form-group">
							<label for="email"><i class="fa fa-envelope fa-lg add-mar"></i>Email:</label>
							<input type="email" name="email" id="email" class="form-control" placeholder="Email address..." autocomplete="off" 
							value="{% if emailOk %} {{ emailOk }} {% endif %}">
							<small id="email-help" class="form-text text-muted">Enter your email address.</small>
						</div>
						<div class="form-group">
							<label for="password"><i class="fa fa-key fa-lg add-mar"></i>Password:</label>
							<div class="input-group">
								<input type="password" name="password" id="password" 
								class="form-control {% if passwordWrong %} wrong-password {% endif %}" placeholder="Password...">
								<div class="input-group-addon add-style-hide-show">
        							<i class="fa fa-eye-slash fa-lg" aria-hidden="true" id="hide-show-el"></i>
      							</div>
							</div>
							<small id="password-help" class="form-text text-muted">
								{% if passwordWrong %}
									<font color="red">Wrong password.</font>
								{% else %}
									Enter your password.
								{% endif %}
							</small>
						</div>
						<div class="custom-control custom-checkbox remember-me">
  							<input type="checkbox" class="custom-control-input" id="rememberMe" name="saveUserData">
  							<label class="custom-control-label" for="rememberMe">Remember me</label>
						</div>
						<input type="submit" value="LOGIN" class="btn btn-primary" id="login-button">
						<input type="hidden" name="userEmails" value="" id="user-emails">
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="js/login.js"></script>
{% endblock %}